<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Register for Event</title>
</head>
<body>
    <header class="header">
        <h1>Register for <%= event.title %></h1>
    </header>

    <% if (errors && errors.length > 0) { %>
        <div class="errors">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <main class="registration-container">
        <form class="register-form" action="/register/<%= event.id %>" method="POST">
            <label for="userName">Name:</label>
            <input type="text" name="userName" id="userName" value="<%= data ? data.userName : '' %>" required>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" value="<%= data ? data.email : '' %>" required>
            <button type="submit">Register</button>
        </form>
    </main>
</body>
</html>
